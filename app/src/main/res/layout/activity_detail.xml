<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_details"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:text="Details "
        android:textSize="20sp">
    </TextView>

    <TextView
        android:id="@+id/text_view_details_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:text="Full name of university: "
        android:textSize="20sp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp">
    </TextView>

    <TextView
        android:id="@+id/text_view_details_name_value"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:text="Chernihiv Polytechnic National University"
        android:textSize="20sp">
    </TextView>

    <TextView
        android:id="@+id/text_view_details_code"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:text="Alpha two code:"
        android:textSize="20sp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp">
    </TextView>

    <TextView
        android:id="@+id/text_view_details_code_value"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:text="UA"
        android:textSize="20sp">
    </TextView>

    <TextView
        android:id="@+id/text_view_details_state"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:text="State-province:"
        android:textSize="20sp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp">
    </TextView>

    <TextView
        android:id="@+id/text_view_details_state_value"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:text="None"
        android:textSize="20sp">
    </TextView>

    <TextView
        android:id="@+id/text_view_details_domains"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:text="Domains:"
        android:textSize="20sp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp">
    </TextView>

    <TextView
        android:id="@+id/text_view_details_domains_values"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:text="cpnu.cn.ua"
        android:textSize="20sp">
    </TextView>

    <TextView
        android:id="@+id/text_view_details_country"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:text="Country:"
        android:textSize="20sp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp">
    </TextView>

    <TextView
        android:id="@+id/text_view_details_country_value"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:text="Ukraine"
        android:textSize="20sp">
    </TextView>

    <TextView
        android:id="@+id/text_view_details_web"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:text="Web-pages:"
        android:textSize="20sp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp">
    </TextView>

    <TextView
        android:id="@+id/text_view_details_web_values"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:text="http://www.stu.cn.ua/"
        android:textSize="20sp">
    </TextView>

</LinearLayout>